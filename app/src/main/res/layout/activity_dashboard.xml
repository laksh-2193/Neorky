<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/top_part_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_margin="0dp"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:scaleType="centerCrop"
                android:background="@drawable/header"
                />
            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/profile_image"
                android:layout_width="85dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_height="85dp"
                android:src="@drawable/user"
                app:civ_border_width="2dp"
                android:elevation="5dp"
                app:civ_border_color="#fff"/>

            <TextView
                android:id="@+id/username"
                android:layout_toRightOf="@id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_marginStart="18dp"

                android:fontFamily="@font/resular"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingTop="10dp"

                android:layout_marginTop="32dp"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID : 44dfkshbxsz"
                android:layout_below="@id/username"
                android:layout_marginStart="18dp"



                android:textColor="#fff"
                android:layout_toRightOf="@id/profile_image"

                android:paddingTop="10dp"
                android:paddingBottom="10dp"

                android:textSize="12dp"
                />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/anouncement_bell"
                android:layout_width="70dp"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                android:layout_marginRight="-20dp"
                android:layout_height="70dp"
                app:lottie_rawRes="@raw/announcement"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"


                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:elevation="10dp"
                android:layout_marginBottom="15dp"
                android:layout_height="192dp"
                android:layout_below="@id/profile_image"
                android:layout_marginTop="24dp"
                android:background="@drawable/dashboard_bg"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Main Menu"
                    android:fontFamily="@font/mligt"
                    android:layout_marginStart="5dp"
                    android:textColor="#818181"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16dp"
                    />
                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/serivices_intent"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:src="@drawable/services"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Services"
                            android:textAlignment="center"
                            android:fontFamily="@font/resular"
                            android:layout_marginStart="5dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="16dp"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/my_requests"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:src="@drawable/requests"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Requests"
                            android:textAlignment="center"
                            android:fontFamily="@font/resular"
                            android:layout_marginStart="5dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="16dp"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/my_profile"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:src="@drawable/profile"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="My Profile"
                            android:textAlignment="center"
                            android:fontFamily="@font/resular"
                            android:layout_marginStart="5dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="16dp"
                            />


                    </LinearLayout>






                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="150dp"
                android:layout_height="130dp"
                app:lottie_rawRes="@raw/business_logo"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get work from your city. Setup your business account right now !!"
                android:textAlignment="center"
                android:fontFamily="@font/mligt"
                android:layout_marginStart="5dp"
                android:textColor="#818181"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="16dp"
                />
            <Button
                android:id="@+id/business_btn"
                android:layout_width="match_parent"


                android:layout_marginLeft="50dp"
                android:padding="5dp"

                android:layout_gravity="center_horizontal"
                android:textColor="#000"

                android:text="Business Account"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:fontFamily="@font/resular"

                android:textSize="18dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_btn_business"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>






</ScrollView>