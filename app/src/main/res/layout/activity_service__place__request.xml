<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent"
    tools:context=".Service_Place_Request">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/slide_image"
                                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_margin="0dp"
                android:layout_marginTop="-100dp"
                android:layout_marginEnd="0dp"
                app:placeholder="@drawable/please_wait"
                app:error_image="@drawable/error"
                android:layout_marginStart="0dp"
                app:auto_cycle="true"
                app:delay="0"
                app:period="1000"

                />
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"

                android:layout_marginBottom="10dp"
                android:id="@+id/profile_card"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="130dp"
                android:background="#fff"
                android:elevation="5dp"
                android:backgroundTint="#fff"
                android:layout_height="150dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/profile_image"

                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profession_name"
                android:layout_width="match_parent"
                android:layout_below="@id/profile_card"
                android:layout_height="wrap_content"
                android:text="Profession"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/resular"
                android:textColor="#000"
                android:textAlignment="center"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                />


        </RelativeLayout>
        <EditText
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:hint="Please describe your needs"
            android:padding="12dp"
            android:textSize="18dp"
            android:fontFamily="@font/mligt"
            android:textStyle="bold"

            android:textColor="#000"


            android:layout_marginRight="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"

            android:background="@drawable/rounded_textview"
            />

            <EditText
                android:id="@+id/budget"
                android:layout_width="match_parent"
                android:hint="Maximum Budget"

                android:padding="12dp"
                android:textSize="18dp"
                android:editable="false"
                android:fontFamily="@font/mligt"
                android:textStyle="bold"

                android:textColor="#000"


                android:layout_marginRight="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_account_balance_wallet_black_24dp"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"

                android:background="@drawable/rounded_textview"
                />
            <EditText
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:hint="Please wait...."
                android:editable="false"
                android:padding="12dp"
                android:textSize="12dp"
                android:fontFamily="@font/mligt"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginLeft="30dp"
               android:inputType="textMultiLine"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"

                android:background="@drawable/rounded_textview"
                />


        <Button
            android:id="@+id/place_req"
            android:layout_width="match_parent"

            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:padding="15dp"
            android:textColor="#fff"

            android:text="Place Request"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/resular"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
            android:textSize="22dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_btn"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/tnccheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/resular"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="25dp"
            android:text="I agree that my phone number, name and location will be shared with all the people related to this profession."
            android:textColor="#E53935"
            android:textSize="14dp"/>


    </LinearLayout>


</ScrollView>