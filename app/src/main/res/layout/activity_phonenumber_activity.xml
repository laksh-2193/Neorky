<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="#fff"
    tools:context=".Phonenumber_activity">
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/hscsv"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"


                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >



                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/logo_2"

                        />
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/flat_phone_icon"
                        android:layout_height="200dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/mulish"
                        android:layout_marginTop="20dp"
                        android:includeFontPadding="false"
                        android:text="Phone Number"

                        android:textColor="#000"
                        android:textStyle="bold"

                        android:textSize="20sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please continue by entering your phone number. An OTP will be sent on this number"
                        android:layout_marginRight="30dp"
                        android:textSize="18dp"
                        android:layout_marginLeft="25dp"
                        android:textColor="#807C7C"

                        android:fontFamily="@font/mligt"
                        />
                    <EditText
                        android:id="@+id/phn_no"
                        android:layout_width="match_parent"
                        android:hint="Phone number"
                        android:padding="12dp"

                        android:textSize="20dp"
                        android:fontFamily="@font/mulish"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:textColor="#515050"
                        android:textAlignment="center"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_height="wrap_content"
                        android:maxLength="10"
                        android:background="@drawable/rounded_textview"
                        />
                    <Button
                        android:id="@+id/continue_btn"
                        android:layout_width="match_parent"

                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="30dp"
                        android:padding="15dp"
                        android:textColor="#fff"

                        android:text="Continue"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:fontFamily="@font/mulish"
                        android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                        android:textSize="18dp"
                        android:background="@drawable/rounded_btn"
                        android:layout_marginRight="30dp"
                        android:layout_height="wrap_content"/>


                    <ProgressBar
                        android:id="@+id/progress_circular"
                        android:layout_marginTop="40dp"
                        android:indeterminateTint="#FF9800"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="50dp"
                        android:visibility="invisible"
                        android:layout_height="50dp"

                        />
                    <TextView
                        android:id="@+id/progress_text"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="100dp"
                        android:layout_height="wrap_content"
                        android:text="Sending OTP..."
                        android:visibility="invisible"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="30dp"
                        android:textSize="16dp"
                        android:layout_marginLeft="25dp"
                        android:textColor="#807C7C"

                        android:fontFamily="@font/mulish"
                        />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>