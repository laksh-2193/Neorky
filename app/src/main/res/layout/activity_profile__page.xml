<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_Page">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/header"
                android:layout_margin="0dp"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_height="230dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save your Profile"
                        android:fontFamily="@font/resular"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"
                        />
                    <TextView


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="So that people can reach you and serve you to the best of their skills."


                        android:fontFamily="@font/mligt"
                        android:textColor="#fff"
                        android:textAlignment="center"

                        android:paddingTop="10dp"


                        android:textSize="15dp"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/back_btn_phn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:padding="10dp"
                    android:src="@drawable/ic_navigate_next_black_4dp"
                    android:scaleX="-1"

                    />




            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="#fff"
                android:background="#fff"
                android:backgroundTint="#fff"
                app:cardElevation="10dp"
                app:cardCornerRadius="12dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView

                        android:id="@+id/profile_image"
                        android:layout_width="95dp"
                        android:layout_gravity="center_horizontal"

                        android:layout_marginTop="20dp"
                        android:layout_height="95dp"
                        android:src="@drawable/user"

                        android:elevation="5dp"
                        app:civ_border_color="#fff"/>

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:hint="Name"
                        android:padding="12dp"
                        android:textSize="18dp"
                        android:fontFamily="@font/mligt"
                        android:textStyle="bold"

                        android:textColor="#000"

                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="30dp"
                        android:drawableLeft="@drawable/ic_people_black_24dp"
                        android:drawablePadding="10dp"
                        android:layout_height="wrap_content"

                        android:background="@drawable/rounded_textview"
                        />
                    <EditText
                        android:id="@+id/phone_no"
                        android:layout_width="match_parent"
                        android:hint="Phone Number"
                        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                        android:drawablePadding="10dp"
                        android:editable="false"
                        android:padding="12dp"
                        android:textSize="18dp"
                        android:fontFamily="@font/mligt"
                        android:textStyle="bold"

                        android:textColor="#000"

                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:background="@drawable/rounded_textview"
                        />
                    <EditText
                        android:id="@+id/district"

                        android:layout_width="match_parent"
                        android:hint="District"
                        android:text="Please wait..."
                        android:drawableLeft="@drawable/ic_location_on_black_24dp"
                        android:drawablePadding="10dp"
                        android:editable="false"
                        android:padding="12dp"
                        android:textSize="18dp"
                        android:fontFamily="@font/mligt"
                        android:textStyle="bold"

                        android:textColor="#000"

                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_height="wrap_content"

                        android:background="@drawable/rounded_textview"
                        />
                    <EditText
                        android:id="@+id/state"

                        android:layout_width="match_parent"
                        android:hint="State"
                        android:text="Please wait..."
                        android:drawableLeft="@drawable/ic_location_city_black_24dp"
                        android:drawablePadding="10dp"
                        android:editable="false"
                        android:padding="12dp"
                        android:textSize="18dp"
                        android:fontFamily="@font/mligt"
                        android:textStyle="bold"

                        android:textColor="#000"

                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_height="wrap_content"

                        android:background="@drawable/rounded_textview"
                        />
                    <Button
                        android:id="@+id/verify_btn"
                        android:layout_width="match_parent"

                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="50dp"
                        android:padding="15dp"
                        android:textColor="#fff"

                        android:text="Save"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:fontFamily="@font/mulish"
                        android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                        android:textSize="18dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/rounded_btn"
                        android:layout_marginRight="50dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>





</RelativeLayout>